<!--index.wxml-->
<view class="container">
  <view class='banner'>
    <text>用户登录</text>
  </view>

  <form bindsubmit="formSubmit" bindreset="formReset">
    <view id="login_input">
      <van-cell-group>
        <van-field
          v-model="username"
          required
          label="用户名"
          right-icon="question-o"
          placeholder="请输入用户名"
          bind:change="OnUsernameChange"
        />

        <van-field
          v-model="password"
          type="password"
          label="密码"
          placeholder="请输入密码"
          required
          bind:change="OnPasswordChange"
        />
      </van-cell-group>
    </view>
    
    <view id="login-btn">
      <van-button  type="primary" size="large" bind:click="login_check" >登录</van-button>
    </view>
  </form>
</view>
